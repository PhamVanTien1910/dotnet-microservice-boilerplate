{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=payment_db;Username=postgres;Password=postgres"
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Issuer": "IAMService",
    "Audience": "BoilerplateUsers",
    "AccessTokenExpirationMinutes": 60
  },
  "JwksSettings": {
    "JwksUri": "http://iam-api:8080/api/.well-known/jwks.json"
  },
  "PaymentSettings": {
    "SuccessUrl": "http://localhost:5000/payments/success",
    "CancelUrl": "http://localhost:5000/payments/cancel",
    "PaymentMethodType": "card",
    "SessionMode": "payment",
    "PaymentIdMetadataKey": "paymentId",
    "BookingIdMetadataKey": "bookingId",
    "SessionIdQueryParameter": "session_id"
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "RetryCount": 5,
    "RequestedHeartbeat": 60,
    "ConnectionTimeout": 30,
    "ExchangeName": "boilerplate_events",
    "QueueName": "payment_service_queue"
  },
  "PaymentGateway": {
    "DefaultGateway": "Stripe"
  },
  "StripeSettings": {
    "PublishableKey": "",
    "SecretKey": ""
  }
}
